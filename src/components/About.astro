---
import type { ui, profileData } from '../i18n/data';

interface Props {
    content: typeof ui.en;
    profile: typeof profileData.en;
}

const { content, profile } = Astro.props;
---
<section id="about" class="py-24 scroll-mt-16">
    <div class="flex items-center gap-3 mb-8">
        <span class="font-mono text-[10px] text-accent uppercase tracking-widest">{content['about.title']}</span>
        <div class="h-px w-12 bg-accent/30"></div>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Text Content -->
        <div class="space-y-6">
            <h2 class="font-display font-bold text-[clamp(28px,4vw,46px)] leading-[1.1] tracking-tight text-text">
                {content['about.h2']}
            </h2>
            
            <div class="space-y-6 font-body font-light text-[15px] leading-loose text-text2">
                <p>
                    {content['about.p1']}
                </p>
                <p>
                    {content['about.p2']}
                </p>
                <p>
                    {content['about.p3']} <strong class="text-text font-normal">{content['about.company']}</strong>{content['about.p3.end']}
                </p>
            </div>

            <!-- Tech Tags -->
            <div class="flex flex-wrap gap-2 pt-4">
                <span class="px-3 py-1.5 rounded-[2px] border border-accent/30 text-accent font-mono text-[10px] uppercase tracking-wide">.NET Core</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-accent/30 text-accent font-mono text-[10px] uppercase tracking-wide">React</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-accent/30 text-accent font-mono text-[10px] uppercase tracking-wide">AI Agents</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-accent/30 text-accent font-mono text-[10px] uppercase tracking-wide">Azure</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-surface2 bg-surface text-text3 hover:text-accent hover:border-accent/30 transition-colors font-mono text-[10px] uppercase tracking-wide">Node.js</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-surface2 bg-surface text-text3 hover:text-accent hover:border-accent/30 transition-colors font-mono text-[10px] uppercase tracking-wide">Kafka</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-surface2 bg-surface text-text3 hover:text-accent hover:border-accent/30 transition-colors font-mono text-[10px] uppercase tracking-wide">Clean Arch</span>
                <span class="px-3 py-1.5 rounded-[2px] border border-surface2 bg-surface text-text3 hover:text-accent hover:border-accent/30 transition-colors font-mono text-[10px] uppercase tracking-wide">Next.js</span>
            </div>
        </div>

        <!-- Decorative Code Block -->
        <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-accent/10 to-accent2/10 rounded-lg blur opacity-50 group-hover:opacity-100 transition duration-1000"></div>
            <div class="relative bg-bg border border-border rounded-lg overflow-hidden font-mono text-[13px] leading-relaxed shadow-2xl">
                <!-- Window Header -->
                <div class="flex items-center gap-2 px-4 py-3 border-b border-border bg-surface">
                    <div class="flex gap-1.5">
                        <div class="w-3 h-3 rounded-full bg-[#FF5F57]"></div>
                        <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
                        <div class="w-3 h-3 rounded-full bg-[#28CA41]"></div>
                    </div>
                    <span class="ml-2 text-text3 text-[11px]">{profile.file}</span>
                </div>
                <!-- Code Content -->
                <div class="p-6 overflow-x-auto">
<pre class="m-0" is:raw><code><span class="text-text3 italic">{profile.file}</span>
<span class="token-keyword">const</span> <span class="token-func">engineer</span> = {
<span class="token-prop">name</span>: <span class="token-string">"{profile.name}"</span>,
<span class="token-prop">role</span>: <span class="token-string">"{profile.role}"</span>,
<span class="token-prop">location</span>: <span class="token-string">"{profile.location}"</span>,
<span class="token-prop">yearsXP</span>: <span class="token-number">7</span>,
<span class="token-comment">// Core strengths</span>
<span class="token-prop">superpower</span>: [
<span class="token-string">"{profile.superpower[0]}"</span>,
<span class="token-string">"{profile.superpower[1]}"</span>,
<span class="token-string">"{profile.superpower[2]}"</span>,
],
<span class="token-prop">currentlyAt</span>: <span class="token-string">"Nava Technology"</span>,
<span class="token-prop">openToWork</span>: <span class="token-keyword">true</span>,
};</code></pre>
                </div>
            </div>
        </div>
    </div>
</section>
