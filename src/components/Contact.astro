---
import type { ui } from '../i18n/data';

interface Props {
    content: typeof ui.en;
}

const { content } = Astro.props;
---
<section id="contact" class="py-32 scroll-mt-16 text-center">
    <span class="font-mono text-[10px] text-accent uppercase tracking-widest mb-6 block">{content['contact.title']}</span>
    
    <h2 class="font-display font-extrabold text-[clamp(40px,7vw,90px)] leading-[0.95] tracking-tight mb-8">
        <span class="block text-text">{content['contact.h2.1']}</span>
        <span class="block text-text">{content['contact.h2.2']}</span>
        <span class="block text-accent">{content['contact.h2.3']}</span>
    </h2>

    <p class="font-body font-light text-text2 text-[16px] max-w-xl mx-auto mb-12">
        {content['contact.desc']}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-16">
        <a href={content['links.email']} class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-accent text-bg px-10 py-4 rounded-[2px] font-mono text-[11px] font-bold uppercase tracking-widest hover:bg-[#00C4AF] hover:-translate-y-[1px] hover:shadow-glow-btn transition-all duration-300">
            {content['contact.cta.message']}
            <iconify-icon icon="solar:plain-linear" width="16" stroke-width="2"></iconify-icon>
        </a>
        <a href={content['links.resume']} download target="_blank" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-transparent border border-border text-text px-10 py-4 rounded-[2px] font-mono text-[11px] uppercase tracking-widest hover:border-text2 transition-all duration-300">
            {content['contact.cta.resume']}
            <iconify-icon icon="solar:file-download-linear" width="16" stroke-width="1.5"></iconify-icon>
        </a>
    </div>

    <!-- Social Links -->
    <div class="flex items-center justify-center gap-6">
        <a href={content['links.github']} target="_blank" rel="noopener noreferrer" class="text-text2 hover:text-accent transition-colors">
            <iconify-icon icon="mdi:github" width="24"></iconify-icon>
        </a>
        <a href={content['links.linkedin']} target="_blank" rel="noopener noreferrer" class="text-text2 hover:text-accent transition-colors">
            <iconify-icon icon="mdi:linkedin" width="24"></iconify-icon>
        </a>
    </div>
</section>
